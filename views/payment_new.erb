<form action="/payment/results">
  <div>
    <label for="user_apr">APR</label>
  </div>
  <div>
    <input type="text" name="apr" id="user_apr" placeholder="E.g. 5.42">
  </div>
    <div>
    <label for="user_years">Number of years</label>
  </div>
  <div>
    <input type="text" name="years" id="user_years" placeholder="How many years to repay?">
  </div>
    <div>
    <label for="user_principal">Principal</label>
  </div>
  <div>
    <input type="text" name="principal" id="user_principal" placeholder="How much principal?">
  </div>
  <button>Calculate monthly payment</button>
</form>
